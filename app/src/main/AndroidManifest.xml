<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapp">

    <!-- Permission to access the internet, if needed -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Define the minimum SDK version required for your app -->
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="30" />

    <!-- Application section -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main activity of the app -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".WelcomeActivity" />

        <!-- Notification channel setup (for API 26 and above) -->
        <!-- Note: This is usually done programmatically, but channels are defined in the manifest if needed -->

    </application>

    <!-- For background tasks or services -->
    <!-- <service android:name=".MyService" /> -->

</manifest>
