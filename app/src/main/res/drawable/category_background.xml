<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#000000"/> <!-- Example color, you can change it -->

    <!-- Rounded corners -->
    <corners android:radius="16dp"/> <!-- Adjust the radius for rounded corners -->

    <!-- Optional: Add a border or stroke -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"/> <!-- Example border color, you can change it -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/> <!-- Adjust padding as needed -->
</shape>

